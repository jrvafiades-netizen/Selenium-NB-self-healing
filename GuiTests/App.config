<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- 
      Configure Selenium grid settings http://www.seleniumhq.org/projects/grid/
    -->
    <!--
      Choose on of the following drivers:
      Chrome
      Firefox
      Edge
    -->
    <add key="DriverToUse" value="Chrome" />
    <add key="TargetUrl" value="https://www.newbalance.com/" />
    <add key="ImplicitlyWait" value="30" />
    <add key="PageLoadTimeout" value="60" />
    
    <!--
      Headless Mode Configuration
      Set to 'false' to run tests in headed mode (browser window visible)
      Set to 'true' to run tests in headless mode (no browser window)
    -->
    <add key="HeadlessMode" value="false" />
    
    <!--
      Healenium Configuration
      Enable self-healing capabilities for element locators
      Set to 'true' to use Healenium-wrapped driver, 'false' for standard Selenium
    -->
    <add key="EnableHealenium" value="false" />
  </appSettings>
</configuration>